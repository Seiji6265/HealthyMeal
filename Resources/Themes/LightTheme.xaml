<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme Colors -->
    <Color x:Key="PrimaryBackgroundColor">#F0F0F0</Color>
    <Color x:Key="PrimaryForegroundColor">#1C1C1C</Color>

    <SolidColorBrush x:Key="PrimaryBackgroundBrush"
            Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush"
            Color="{StaticResource PrimaryForegroundColor}"/>

    <!-- More theme-specific resources can be added here -->
</ResourceDictionary> 